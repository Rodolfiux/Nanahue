
<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
<main class="container">

    <div class="row">
        <% if (lista_limones.length> 0) { %>
            <% for (let limones of lista_limones) { %>
                <div class="col s12 m6 l4">
                    <div class="card" style="width: 18rem;">
                        <img src="<%= limones.imagen %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= limones.nombre %>
                            </h5>
                            <p class="card-text">
                                <%= limones.descripcion %>
                            </p>
                            <a href="#" class="btn btn-primary">Informacion</a>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                </div>
                <% } %>
                    <% } else { %>
                        <h3>El arbol no tiene frutos</h3>
                        <% } %>

    </div>


</main>




















